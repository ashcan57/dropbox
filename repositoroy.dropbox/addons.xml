<addons>
  <addon id="plugin.program.dropbox.downloader"
         name="Build Downloader"
         version="1.0.0"
         provider-name="ashcan57">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="main.py">
      <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary lang="en_GB">A simple addon to download a build from a hardcoded URL.</summary>
      <description lang="en_GB">This addon downloads a specific build from a hardcoded Dropbox link. Just click to run.</description>
      <platform>all</platform>
      <license>GPL-2.0-or-later</license>
    </extension>
  </addon>
</addons>